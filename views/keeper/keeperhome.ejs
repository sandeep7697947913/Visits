<!DOCTYPE html>
<html>
    <head>
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <link rel='stylesheet' href="../bootstrap.css" />
        <link rel ='stylesheet' href="../stylesheets/keeperhome.css" />
        <script src='../jquery.js'></script>
        <script src="../javascripts/jquery-ui.js"></script>
        <script src="../javascripts/vaildate.js"></script>
        <title>Keepers</title>
    </head>
    <body>
        <div class="container-fluid">
            <div class="row">
                <div class='col-md-4 text-success'>
                    <h3><p>Visitors <sub><cite>Athiti devo bhav </cite></sub></p></h3>
                </div>
                <div class="offset-4 text-info">
                    <h3><%= keeper.keeper_unique_id %></h3>
                </div>
            </div>
            <div class="row">
                <div class="col-md-10">
                    <ul class="nav nav-tabs">
                        <li class="nav-item">
                            <a class="nav-link active">Visitors</a>
                        </li>
                        <li class="nav-item">
                            <a href="todayvisitors" class="nav-link">Todays Visitors</a>
                        </li>
                        <li class="nav-item">
                            <a href='profile' class="nav-link">Pofile</a>
                        </li>
                    </ul>
                </div>
                <div class="col-md-2">
                    <a id='logout' href='../logout' class="btn btn-danger text-white">Logout</a>
                </div>
            </div>
            <div id="dist">
                <div class='container'>
                    <div class="row">
                        <h3>Add Visitors</h3>
                    </div>
                </div>
                <div class="container">
                    <div class="form-row">
                        <div class="form-group col-md-2">
                            <label for="name">Name</label>
                            <input class='form-control' type="text" name="name" id="name" />
                        </div>
                        <div class="form-group col-md-3">
                            <label for="email">Email</label>
                            <input class='form-control' type="email" name="email" id="email" />
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-2">
                            <label for="contact">Contact</label>
                            <input class="form-control" type="tel" name="contact" id="contact">
                        </div>
                        <div class="form-group col-md-8">
                            <label for="purpose">Purpose</label>
                            <input class="form-control" type="text" name="purpose" id="purpose">
                            <div class="valid-feedback" style="display:block">This field is required</div>
                        </div>
                    </div>
                    <div class="form-row col-md-12">
                        <input class='col-md-1 btn btn-primary disabled' id='subbtn' disabled type="button" value='submit'/>
                    </div>
                </div>
            </div>
            <div class="container">
                <p id='updatemessage' class="text-success lead text-center" > Visitor is added !</p>
            </div>
        </div>
        <%- include('../footer'); %>
        <script src='../javascripts/keeperhome.js'></script>
    </body>
</html>